[colors]
;background = ${xrdb:color0:#222}
background = #171717
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #68a35e
foreground-alt = #5A8E3A
primary = #ffb52a
secondary = #f26419
alert = #bd2c40
red = #98555A

[bar/example]
monitor = eDP-1
bottom = false

background = ${colors.background}
line-size = 0
line-color = #f00
border-size = 0
